<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/nome_procedimento"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:text="Esfoliacao"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            />

        <EditText
            android:id="@+id/data_procedimento"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/nome_procedimento"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:text="17/12/2021"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@android:color/transparent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/data_procedimento"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:text="R$ 25,00"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome_procedimento"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="0dp"
            android:text="16:00"
            android:background="@android:color/transparent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            android:layout_below="@+id/data_procedimento"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey2"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

</LinearLayout>

