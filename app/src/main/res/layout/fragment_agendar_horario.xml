<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendarHorarioFragment"
    android:id="@+id/fragmentAgendar">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/green"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/agendar_hor_rio"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />

<ScrollView
android:layout_width="match_parent"
android:layout_height="543dp"
android:layout_marginTop="190dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procedimento:"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/select_procedimento"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/select_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="mm/dd/yyyy"
        android:textSize="24sp"
        android:textAlignment="center"
        android:inputType="date"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HorÃ¡rio:"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>



    <Spinner
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/select_horario"
        />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_button"
        android:layout_marginTop="30dp"
        android:text="Agendar"
        android:textSize="18sp"
        android:id="@+id/novo_agendamento"/>


</LinearLayout>

</ScrollView>


</FrameLayout>